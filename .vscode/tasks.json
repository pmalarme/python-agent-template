    {
      "label": "Setup (venv + deps + hooks)",
      "type": "shell",
      "command": "uv",
      "detail": "Creates .venv, installs all extras, runs pre-commit install via poe setup",
      "args": ["run", "poe", "setup", "--python=${input:py_version}"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "py_version",
      "description": "Python version",
      "options": ["3.10", "3.11", "3.12", "3.13"],
      "default": "3.13"
    }
  ]
}
